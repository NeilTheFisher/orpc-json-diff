{
  "name": "orpc-json-diff",
  "version": "0.1.4",
  "type": "module",
  "repository": "https://github.com/NeilTheFisher/orpc-json-diff",
  "exports": {
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown --outDir dist --minify --target es2020 src/server.ts src/client.ts",
    "dev": "tsdown --watch",
    "format": "bun run format:sort-package-json && timeout 4 biome check --write .",
    "format:sort-package-json": "bun x --bun sort-package-json@3.5.0 'package.json'",
    "lint": "concurrently --names \"tsgo,biome,oxlint\" --prefix-colors auto \"tsgo --noEmit\" \"biome check .\" \"oxlint --type-aware\""
  },
  "dependencies": {
    "@orpc/client": "^1.12.2",
    "@orpc/shared": "^1.12.2",
    "fast-json-patch": "^3.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@typescript/native-preview": "^7.0.0-dev.20251209.1",
    "concurrently": "^9.2.1",
    "oxlint": "^1.32.0",
    "oxlint-tsgolint": "^0.8.4",
    "tsdown": "^0.17.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@orpc/client": "^1.12.2",
    "@orpc/shared": "^1.12.2"
  }
}
